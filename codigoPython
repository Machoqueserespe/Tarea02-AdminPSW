#Funcion que calcula el factorial de cualquier numero
def factorial(n):
   if n==0 or n==1:
            resultado=1
   elif n>1:
            resultado=n*factorial(n-1)
   return resultado

#CALCULAMOS EL FACTORIAL DE 5.
def main():
   numero = int(input("Ingrese un numero para calcular su factorial"))
   print(f"El factorial de {numero} es {factorial(numero)}")

#VISUALIZAMOS RESULTADO.
main()
